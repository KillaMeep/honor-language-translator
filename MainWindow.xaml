<Window x:Class="WpfTranslator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Honor Language" SizeToContent="WidthAndHeight" Background="#333333">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Input a sentence to translate:" Margin="10" Foreground="White"/>
        <TextBox x:Name="InputTextBox" Grid.Row="1" Margin="10" Width="350" Background="#444444" Foreground="White" BorderBrush="Cyan"/>

        <Button Content="Translate" Grid.Row="2" Margin="10" Click="TranslateButton_Click" Width="100" Height="30" HorizontalAlignment="Center" Background="#444444" Foreground="White" BorderBrush="Cyan"/>

        <Label x:Name="TranslationLabel" Grid.Row="3" Margin="10" HorizontalAlignment="Left" Foreground="Cyan"/>
        <TextBox x:Name="ResultTextBox" Grid.Row="4" Margin="10" IsReadOnly="True" Width="350" Height="100" HorizontalAlignment="Stretch" VerticalScrollBarVisibility="Auto" Background="#444444" Foreground="White" BorderBrush="Cyan"/>
    </Grid>
</Window>
